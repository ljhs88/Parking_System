<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cus_LoginActivity"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/constraintLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintGuide_percent="0.35" />

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/constraintLine1"
        android:id="@+id/CircleImageView1_login"
        android:src="@drawable/logo"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constraintLine1"
        android:layout_marginBottom="12dp"
        android:background="@drawable/dialog_login"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:id="@+id/cus_account"
        android:hint="@string/account"
        android:inputType="number"
        android:textCursorDrawable="@color/black"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/cus_account"
        app:layout_constraintEnd_toStartOf="@id/get_code_button"
        app:layout_constraintTop_toBottomOf="@id/constraintLine1"
        android:layout_marginTop="24dp"
        android:id="@+id/cus_password"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/black"
        app:layout_constraintHorizontal_weight="6"
        android:inputType="number"
        tools:ignore="TextFields" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/cus_password"
        app:layout_constraintEnd_toEndOf="@id/cus_account"
        app:layout_constraintBottom_toBottomOf="@id/cus_password"
        android:layout_marginBottom="12dp"
        app:layout_constraintHorizontal_weight="4"
        android:text="@string/get_code"
        android:padding="12dp"
        android:background="@drawable/button_background"
        android:id="@+id/get_code_button"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/cus_password"
        app:layout_constraintTop_toBottomOf="@id/cus_password"
        android:id="@+id/checkbox_login"
        android:layout_marginTop="24dp"
        android:theme="@style/MyCheckBox"
        android:text="@string/read"
        />

    <Button
        android:layout_width="128dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkbox_login"
        android:layout_marginTop="24dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:id="@+id/login_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number_login"
        android:text="@string/phone_number_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        android:textColor="@color/black"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="12dp"
        app:layout_constraintStart_toEndOf="@id/phone_number_login"
        app:layout_constraintBottom_toBottomOf="@id/phone_number_login"
        app:layout_constraintTop_toTopOf="@id/phone_number_login"
        android:layout_marginStart="12dp"
        android:id="@+id/login_view1"
        android:background="@color/black"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="12dp"
        app:layout_constraintEnd_toStartOf="@id/phone_number_login"
        app:layout_constraintBottom_toBottomOf="@id/phone_number_login"
        app:layout_constraintTop_toTopOf="@id/phone_number_login"
        android:layout_marginEnd="12dp"
        android:id="@+id/login_view2"
        android:background="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget_password"
        android:text="@string/forget_password"
        app:layout_constraintEnd_toStartOf="@id/login_view2"
        app:layout_constraintBottom_toBottomOf="@id/phone_number_login"
        android:layout_marginEnd="12dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_register"
        android:text="@string/new_register"
        app:layout_constraintStart_toEndOf="@id/login_view1"
        app:layout_constraintBottom_toBottomOf="@id/phone_number_login"
        android:layout_marginStart="12dp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>