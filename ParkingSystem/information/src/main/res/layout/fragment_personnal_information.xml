<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".personal_information">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="个人资料"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/male1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="性别"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/male"
            android:layout_width="110dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/male1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/male1"
            android:layout_marginEnd="10dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="@color/white"
            android:maxLines="1"
            android:maxLength="7"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/male1"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/phone_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="手机号码"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/phone_num"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/phone_num1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/phone_num1"
            android:layout_marginEnd="10dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="@color/white"
            android:maxLines="1"
            android:maxLength="7"
            />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_num1"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/car_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="车牌号码"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/car_num"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/car_num1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/car_num1"
            android:layout_marginEnd="10dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="@color/white"
            android:maxLines="1"
            android:maxLength="7"
            />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/car_num1"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/car_age1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="车龄"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/car_age"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/car_age1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/car_age1"
            android:layout_marginEnd="10dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="@color/white"
            android:maxLines="1"
            android:maxLength="7"
            />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/car_age1"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/location1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="地区"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/location"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/location1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/location1"
            android:layout_marginEnd="10dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="@color/white"
            android:maxLines="1"
            android:maxLength="7"
            />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/location1"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/personality1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:text="个性签名"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/personality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/personality1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/personality1"
            app:layout_constraintBottom_toBottomOf="@+id/personality1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="@color/white"
            android:maxLines="3"
            android:maxLength="51"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>