<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".personal.personal_information">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            android:layout_marginStart="10dp"
            android:background="@drawable/back"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="个人资料"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="70.5dp">

            <ImageView
                android:id="@+id/head_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/head_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_marginTop="10dp"
            android:text="点击修改头像"
            android:textStyle="normal"
            android:textSize="15dp"
            android:textColor="#AAAA"
            android:background="#0000"/>

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/head_change"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="昵称"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/name1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/name1"
            android:layout_marginEnd="10dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="#0aaa"
            android:maxLines="1"
            android:maxLength="15"
            android:gravity="right"
            android:inputType="textAutoComplete"
            />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/name1"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/male1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view1"
            app:layout_constraintStart_toStartOf="@id/name1"
            android:layout_marginTop="10dp"
            android:text="性别"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/male1"
            app:layout_constraintEnd_toEndOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@+id/male1"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="#0aaa"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="text|textAutoComplete"
            android:gravity="right"
            android:hint="示例：男"
            />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/male"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/birthday1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view3"
            app:layout_constraintStart_toStartOf="@id/name1"
            android:layout_marginTop="10dp"
            android:text="生日"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/birthday"
            android:layout_height="0dp"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:background="#0aaa"
            android:maxLength="10"
            android:maxLines="2"
            android:textSize="15dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/birthday1"
            app:layout_constraintEnd_toEndOf="@id/name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/birthday1"
            app:layout_constraintVertical_bias="0.0"
            android:inputType="numberDecimal"
            android:hint="示例：2001.04.25"
            android:gravity="right"/>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/birthday1"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>


        <TextView
            android:id="@+id/location1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view5"
            app:layout_constraintStart_toStartOf="@id/name1"
            android:layout_marginTop="10dp"
            android:text="地区"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:minWidth="100dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/location1"
            app:layout_constraintEnd_toEndOf="@id/name"
            app:layout_constraintBottom_toBottomOf="@+id/location1"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="#0aaa"
            android:maxLines="2"
            android:maxLength="20"
            android:gravity="right"
            />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            app:layout_constraintTop_toBottomOf="@+id/location1"
            android:layout_marginTop="10dp"
            android:background="#2AAA"/>

        <TextView
            android:id="@+id/personality1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view6"
            app:layout_constraintStart_toStartOf="@id/name1"
            android:layout_marginTop="25dp"
            android:text="个性签名"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/personality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/personality1"
            app:layout_constraintEnd_toEndOf="@id/name"
            app:layout_constraintStart_toEndOf="@+id/personality1"
            app:layout_constraintBottom_toBottomOf="@+id/personality1"
            android:layout_marginStart="15dp"
            android:textStyle="normal"
            android:textSize="15dp"
            android:background="#0aaa"
            android:maxLines="3"
            android:maxLength="51"
            />

        <Button
            android:id="@+id/infUpload"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/personality"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="80dp"
            android:text="保存"
            android:textStyle="normal"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>