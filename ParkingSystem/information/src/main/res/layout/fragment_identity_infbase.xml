<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        android:layout_marginStart="10dp"
        android:background="@drawable/back"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="身份基本信息"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="10dp"
        android:background="#2AAA"/>

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:text="姓名"
        android:textStyle="normal"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:minWidth="80dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_marginEnd="20dp"
        android:textStyle="normal"
        android:gravity="center|right"
        android:textSize="15dp"
        android:background="#0aaa"
        android:maxLines="1"
        android:maxLength="5"
        />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/name1"
        android:layout_marginTop="15dp"
        android:background="#2AAA"/>

    <TextView
        android:id="@+id/id_card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@id/name1"
        android:layout_marginTop="15dp"
        android:text="身份证"
        android:textStyle="normal"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/id_card"
        android:layout_width="wrap_content"
        android:minWidth="170dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        android:textStyle="normal"
        android:gravity="center|right"
        android:textSize="15dp"
        android:background="#0aaa"
        android:maxLines="2"
        android:maxLength="20"
        />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/id_card1"
        android:layout_marginTop="15dp"
        android:background="#2AAA"/>

    <TextView
        android:id="@+id/car_num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@id/name1"
        android:layout_marginTop="15dp"
        android:text="车牌号"
        android:textStyle="normal"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/car_num"
        android:layout_width="wrap_content"
        android:minWidth="120dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        android:textStyle="normal"
        android:gravity="center|right"
        android:textSize="15dp"
        android:background="#0aaa"
        android:maxLines="1"
        android:maxLength="11"
        />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        app:layout_constraintTop_toBottomOf="@+id/car_num1"
        android:layout_marginTop="15dp"
        android:background="#2AAA"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@id/name1"
        android:layout_marginTop="15dp"
        android:text="注：三项都需填写系统才会予以保存"
        android:textStyle="normal"
        android:textColor="#caaa"
        android:textSize="12dp"/>

    <Button
        android:id="@+id/infUpload"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:text="保存"
        android:textStyle="normal"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"/>

</androidx.constraintlayout.widget.ConstraintLayout>